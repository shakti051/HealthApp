<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/black_border"
        android:elevation="10dp"
        card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/medicineFiledLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Medicine"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=":"
                android:textColor="#000000"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/medicinePreETID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                        android:text="combiflam"
                android:padding="5dp"
                android:textColor="#000000" />

            <!--<EditText
                android:id="@+id/medicinePreETID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line_et"
                android:hint="Medicine"
                android:textColor="#000000"
                android:layout_weight="2"
                android:padding="5dp"/>-->

            <!-- List View -->
            <!--<ListView
                android:id="@+id/list_viewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:visibility="gone">

            <Spinner
                android:id="@+id/spMedicineTypeID"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spDosageID"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Potency"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=":"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/potencyPreETID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                            android:text="5 mg"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:text="Duration"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=":"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/durationPreID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
 android:text="5 Days"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="#000000" />
        </LinearLayout>




    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>