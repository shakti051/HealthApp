<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/spinner_LY_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/border_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you Want ?"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/border_white"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/selectFamilyDetail_SP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Type ?"
                android:textColor="#000"
                android:id="@+id/carTypeTV"
                android:layout_marginLeft="5dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:id="@+id/spinnerLY"
                android:background="@drawable/border_white"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/cartypeSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_tick"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Car confirmed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"

            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Should be there in 15 minutes"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track below"
            android:textSize="14sp"
           android:layout_margin="5dp"
            android:textColor="#fff"
            android:background="#0091cd"/>
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_margin="5dp"
    android:background="#000"/>
</LinearLayout>